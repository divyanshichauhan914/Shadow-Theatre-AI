def generate_story_with_groq(api_key, prompt, language):
    url = "https://api.groq.com/openai/v1/chat/completions"
    headers = {"Authorization": f"Bearer {api_key}", "Content-Type": "application/json"}
    lang_inst = "HINDI (Devanagari script)" if language == "Hindi" else "ENGLISH"
    system_prompt = f"""Create an epic shadow puppet play about: "{prompt}".
    Return exactly 5 scenes in JSON format. Narration in {lang_inst}. prompts in English.
    Include a "moral_of_the_story" field at the end in {lang_inst}.
    {{ "story_title": "Title", "moral_of_the_story": "Moral text here",
      "scenes": [{{ "scene_title": "T", "narration_text": "N", "image_generation_prompt": "P" }}] }}"""
    payload = {"model": "llama-3.3-70b-versatile", "messages": [{"role": "user", "content": system_prompt}], "response_format": {"type": "json_object"}}
    try:
        response = requests.post(url, headers=headers, json=payload, timeout=20)
        content = response.json()['choices'][0]['message']['content']
        return json.loads(re.search(r'\{.*\}', content, re.DOTALL).group(0))
    except: return None

def generate_image_with_hf(unused_api_key, prompt, scene_num):
    style_prompt = f"Professional shadow puppet art, {prompt}, dramatic golden rim lighting, backlight glow, high contrast deep blacks, textured parchment paper, intricate silhouettes, cinematic atmosphere, 8k resolution"
    encoded_prompt = urllib.parse.quote(style_prompt)
    image_url = f"https://image.pollinations.ai/prompt/{encoded_prompt}?width=1024&height=768&seed={scene_num}&nologo=true&enhance=true&model=flux"
    try:
        response = requests.get(image_url, timeout=60)
        if response.status_code == 200:
            image_path = os.path.join("temp", f"scene_{scene_num}.png")
            with open(image_path, "wb") as f: f.write(response.content)
            return image_path
    except: return None

async def generate_audio_with_edge_tts(text, scene_num, language):
    try:
        audio_path = os.path.join("temp", f"narration_{scene_num}.mp3")
        voice = "hi-IN-MadhurNeural" if language == "Hindi" else "en-US-GuyNeural"
        communicate = edge_tts.Communicate(text, voice)
        await communicate.save(audio_path)
        return audio_path
    except: return None

def create_video_with_moviepy(scenes_data):
    try:
        clips = []
        for scene in scenes_data:
            audio_clip = AudioFileClip(scene['audio_path'])
            img_clip = ImageClip(scene['image_path'], duration=audio_clip.duration)
            def puppeteer_motion(get_frame, t):
                frame = get_frame(t)
                h, w = frame.shape[:2]
                zoom = 1 + (t / audio_clip.duration) * 0.1
                img = Image.fromarray(frame).resize((int(w*zoom), int(h*zoom)), Image.LANCZOS)
                l, t_pos = (img.size[0]-w)//2, (img.size[1]-h)//2
                return np.array(img.crop((l, t_pos, l+w, t_pos+h)))
            clips.append(img_clip.fl(puppeteer_motion).set_audio(audio_clip))
        final_clip = concatenate_videoclips(clips, method="compose")
        v_out = os.path.join("temp", f"v_{int(time.time())}.mp4")
        final_clip.write_videofile(v_out, fps=24, codec='libx264', audio_codec='aac', logger=None)
        return v_out
    except: return None

